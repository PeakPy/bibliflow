# Django
DEBUG=True
SECRET_KEY=change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DJANGO_SETTINGS_MODULE=bibliflow.settings.dev

# Database
DATABASE_URL=postgresql://bibliflow:password@db:5432/bibliflow_dev

# Redis & Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0

# File Processing
MAX_CSV_FILE_SIZE=104857600  # 100MB
DEFAULT_CHUNK_SIZE=100
ALLOWED_CSV_MIME_TYPES=text/csv,text/plain,application/csv

# Security
CSRF_TRUSTED_ORIGINS=http://localhost:8000
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=INFO